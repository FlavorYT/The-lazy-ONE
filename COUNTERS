function CountMoneybag()
    local moneyCount = 0
    
    
    local player = game.Players.LocalPlayer
    local backpack = player.Backpack
    
    for _, tool in pairs(backpack:GetChildren()) do
        if tool.Name == "Moneybag" then
            moneyCount = moneyCount + 1
        end
    end
    
    return moneyCount
end

