local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

while true do
    -- Highlight the LocalPlayer's character
    if LocalPlayer.Character then
        for _, part in ipairs(LocalPlayer.Character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.BrickColor = BrickColor.new("Bright red")
            end
        end
    end
    
    -- Wait for a short period before highlighting again
    wait(0.5)
    
    -- Restore the original color after highlighting
    if LocalPlayer.Character then
        for _, part in ipairs(LocalPlayer.Character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.BrickColor = part.OriginalColor or part.BrickColor
            end
        end
    end
    
    -- Wait for a short period before the next loop iteration
    wait(0.5)
end
