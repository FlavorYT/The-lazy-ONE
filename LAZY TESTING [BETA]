local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local OrionLib = require(game:GetService("ReplicatedStorage"):WaitForChild("OrionLib"))

game.ReplicatedStorage.ScriptEvent:FireServer()

game.ReplicatedStorage.ScriptEvent.OnClientEvent:Connect(function(scriptUsers)
    if next(scriptUsers) == nil then
        OrionLib:MakeNotification({
            Name = "No one used the same script",
            Content = "",
            Image = "rbxassetid://7733920644",
            Time = 5
        })
    else
        local notificationText = ""
        for userId, _ in pairs(scriptUsers) do
            local player = Players:GetPlayerByUserId(userId)
            if player then
                notificationText = notificationText .. player.Name .. " is using the same script.\n"
            end
        end
        OrionLib:MakeNotification({
            Name = "Detected",
            Content = notificationText,
            Image = "rbxassetid://7733920644",
            Time = 5
        })
    end
end)
